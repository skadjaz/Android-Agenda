<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F9FF"
    android:backgroundTint="#F1F9FF"
    app:titleTextAppearance="@style/TextAppearance.AppCompat.Body2"
    tools:context=".AddActivity">


    <include
        android:id="@+id/include"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_margin="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="42dp"
        android:background="#F1F9FF"
        android:backgroundTint="#F1F9FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2699FB"
            android:text="Adicionar Contacto"
            android:background="@drawable/custom_input"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caixas_texto" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/caixas_texto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="#FFFFFF"
            android:padding="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".AddActivity">

            <EditText
                android:id="@+id/nome_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_edit_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#2699FB"
                android:textColorHint="#BCE0FD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titulo" />

            <EditText
                android:id="@+id/sobrenome_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_edit_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="sobrenome"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#2699FB"
                android:textColorHint="#BCE0FD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nome_input" />

            <EditText
                android:id="@+id/contacto_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_phone_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="contacto"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="#2699FB"
                android:textColorHint="#BCE0FD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sobrenome_input" />

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Contacto"
                android:textColor="#2699FB"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>